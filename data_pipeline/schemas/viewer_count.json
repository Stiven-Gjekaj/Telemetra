{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://telemetra.dev/schemas/viewer_count.json",
  "title": "ViewerCount",
  "description": "Schema for viewer count updates",
  "type": "object",
  "required": ["event_id", "channel", "viewer_count", "timestamp"],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique identifier for this viewer count event",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
    },
    "channel": {
      "type": "string",
      "description": "Channel/stream name",
      "minLength": 1,
      "maxLength": 100
    },
    "viewer_count": {
      "type": "integer",
      "description": "Current number of viewers",
      "minimum": 0
    },
    "chatter_count": {
      "type": "integer",
      "description": "Number of active chatters (subset of viewers)",
      "minimum": 0
    },
    "follower_count": {
      "type": "integer",
      "description": "Total follower count at this time",
      "minimum": 0
    },
    "subscriber_count": {
      "type": "integer",
      "description": "Number of subscribers currently watching",
      "minimum": 0
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of this measurement",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "description": "Additional context",
      "properties": {
        "peak_today": {
          "type": "integer",
          "description": "Peak viewer count today",
          "minimum": 0
        },
        "stream_uptime_seconds": {
          "type": "integer",
          "description": "How long stream has been live",
          "minimum": 0
        }
      }
    }
  }
}
