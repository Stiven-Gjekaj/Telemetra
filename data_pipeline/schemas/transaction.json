{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://telemetra.dev/schemas/transaction.json",
  "title": "Transaction",
  "description": "Schema for monetization events (donations, subs, bits)",
  "type": "object",
  "required": ["transaction_id", "channel", "transaction_type", "amount", "timestamp"],
  "properties": {
    "transaction_id": {
      "type": "string",
      "description": "Unique identifier for this transaction",
      "pattern": "^txn_[a-f0-9]{16}$"
    },
    "channel": {
      "type": "string",
      "description": "Channel/stream receiving the transaction",
      "minLength": 1,
      "maxLength": 100
    },
    "username": {
      "type": "string",
      "description": "User making the transaction",
      "minLength": 1,
      "maxLength": 50
    },
    "user_id": {
      "type": "string",
      "description": "Unique user identifier",
      "pattern": "^user_[0-9]{6,10}$"
    },
    "transaction_type": {
      "type": "string",
      "description": "Type of transaction",
      "enum": ["donation", "subscription", "bits", "gift_sub", "subscription_renewal"]
    },
    "amount": {
      "type": "number",
      "description": "Amount in USD (for donations) or quantity (for bits/subs)",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "currency": {
      "type": "string",
      "description": "Currency code",
      "default": "USD",
      "pattern": "^[A-Z]{3}$"
    },
    "tier": {
      "type": "string",
      "description": "Subscription tier (for subscription types)",
      "enum": ["tier1", "tier2", "tier3", "prime"]
    },
    "message": {
      "type": "string",
      "description": "Optional message attached to transaction",
      "maxLength": 500
    },
    "is_anonymous": {
      "type": "boolean",
      "description": "Whether transaction is anonymous",
      "default": false
    },
    "months": {
      "type": "integer",
      "description": "Number of months (for subscriptions)",
      "minimum": 1,
      "maximum": 100
    },
    "streak_months": {
      "type": "integer",
      "description": "Consecutive subscription months",
      "minimum": 0
    },
    "gift_count": {
      "type": "integer",
      "description": "Number of gift subs given",
      "minimum": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of transaction",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "description": "Additional transaction metadata",
      "properties": {
        "payment_method": {
          "type": "string",
          "description": "Payment method used"
        },
        "refundable": {
          "type": "boolean",
          "description": "Whether transaction can be refunded"
        }
      }
    }
  }
}
