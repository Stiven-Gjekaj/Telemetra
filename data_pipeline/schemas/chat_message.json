{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://telemetra.dev/schemas/chat_message.json",
  "title": "ChatMessage",
  "description": "Schema for Twitch-like chat messages",
  "type": "object",
  "required": ["message_id", "channel", "username", "message", "timestamp"],
  "properties": {
    "message_id": {
      "type": "string",
      "description": "Unique identifier for the chat message",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
    },
    "channel": {
      "type": "string",
      "description": "Channel/stream name where message was sent",
      "minLength": 1,
      "maxLength": 100
    },
    "username": {
      "type": "string",
      "description": "Username of the chatter",
      "minLength": 1,
      "maxLength": 50
    },
    "user_id": {
      "type": "string",
      "description": "Unique user identifier",
      "pattern": "^user_[0-9]{6,10}$"
    },
    "message": {
      "type": "string",
      "description": "The actual chat message content",
      "minLength": 1,
      "maxLength": 500
    },
    "emotes": {
      "type": "array",
      "description": "List of emotes used in the message",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "badges": {
      "type": "array",
      "description": "User badges (subscriber, moderator, etc.)",
      "items": {
        "type": "string",
        "enum": ["broadcaster", "moderator", "subscriber", "vip", "partner", "turbo", "premium"]
      },
      "uniqueItems": true
    },
    "is_action": {
      "type": "boolean",
      "description": "Whether this is a /me action message",
      "default": false
    },
    "bits": {
      "type": "integer",
      "description": "Number of bits cheered in this message (0 if none)",
      "minimum": 0,
      "default": 0
    },
    "sentiment_hint": {
      "type": "string",
      "description": "Hint for sentiment analysis (positive, negative, neutral, excited)",
      "enum": ["positive", "negative", "neutral", "excited", "question"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when message was sent",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "client": {
          "type": "string",
          "description": "Client used to send message"
        },
        "color": {
          "type": "string",
          "description": "User's chat color",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      }
    }
  }
}
