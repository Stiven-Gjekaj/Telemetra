# Telemetra Backend Environment Configuration
# Copy this file to .env and update with your values

# Application
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=telemetra
POSTGRES_USER=telemetra_user
POSTGRES_PASSWORD=telemetra_pass

# Database Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis Cache TTL (seconds)
CACHE_TTL_METRICS=60
CACHE_TTL_STREAMS=300

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_INTERVAL=1.5

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Kafka (for reference, used by other services)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
