# ===========================
# Telemetra Environment Config
# ===========================
# Copy this file to .env and update values as needed for your environment

# PostgreSQL Configuration
POSTGRES_USER=telemetra
POSTGRES_PASSWORD=telemetra_dev_password
POSTGRES_DB=telemetra

# Kafka Configuration
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_TOPIC_CHAT=telemetra.events.chat
KAFKA_TOPIC_VIEWER=telemetra.events.viewer
KAFKA_TOPIC_TRANSACTIONS=telemetra.events.transactions
KAFKA_TOPIC_STREAM_META=telemetra.events.stream_meta

# Mock Producer Configuration
PRODUCER_RATE_PER_SEC=10
PRODUCER_CHANNELS=demo_stream

# Backend Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
REDIS_URL=redis://redis:6379
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
API_TITLE=Telemetra API
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# General Configuration
LOG_LEVEL=INFO
DEBUG=false

# pgAdmin Configuration
PGADMIN_EMAIL=admin@telemetra.local
PGADMIN_PASSWORD=admin

# Spark Configuration (optional)
SPARK_MASTER=spark://spark-master:7077
SPARK_WORKER_MEMORY=1G
SPARK_WORKER_CORES=2

# Streaming Configuration
CHAT_WINDOW_DURATION_SECONDS=60
CHAT_WINDOW_SLIDE_SECONDS=10
ANOMALY_DETECTION_THRESHOLD=3.0
CHAT_RETENTION_DAYS=7
